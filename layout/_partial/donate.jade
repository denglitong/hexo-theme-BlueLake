.post-donate
    #donate_board.donate_bar.center
        a#btn_donate.btn_donate(href='javascript:;', title='打赏')
        .donate_txt
            |  &uarr;
            br
            != theme.donate.message
            br
    #donate_guide.donate_bar.center.hidden.pay
        img(src=theme.donate.wechatpay, title='微信打赏（Wechat PAY）' alt= '微信打赏（Wechat PAY）')
        img(src=theme.donate.alipay, title='支付宝打赏（ALIPAY）' alt= '支付宝打赏（ALIPAY）')
    script(type='text/javascript').
        document.getElementById('btn_donate').onclick = function(){
            $('#donate_board').addClass('hidden');
            $('#donate_guide').removeClass('hidden');
        }